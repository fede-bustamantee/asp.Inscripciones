@model Inscripciones.Models.DetalleInscripcion

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles</h1>

<div>
    <h4>Detalle Inscripcion</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ModalidadCursado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ModalidadCursado)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Inscripcion.Alumno)
        </dt>
        <dd class = "col-sm-10">
            @Model.Inscripcion.Fecha.ToString("dd/MM/yyyy")
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Materia)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Materia.Nombre)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
    <a asp-action="Index">Volver a la lista</a>
</div>
