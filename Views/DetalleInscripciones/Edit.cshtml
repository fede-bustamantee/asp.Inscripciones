@model Inscripciones.Models.DetalleInscripcion

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Detalle Inscripcion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ModalidadCursado" class="control-label"></label>
                <input asp-for="ModalidadCursado" class="form-control" />
                <span asp-validation-for="ModalidadCursado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InscripcionId" class="control-label"></label>
                <select asp-for="InscripcionId" class="form-control" asp-items="ViewBag.Inscripciones"></select>
                <span asp-validation-for="InscripcionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MateriaId" class="control-label"></label>
                <select asp-for="MateriaId" class="form-control" asp-items="ViewBag.Materias"></select>
                <span asp-validation-for="MateriaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
